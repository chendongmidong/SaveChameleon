<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
>
    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/animation_layout"
            android:layout_weight="3"
            android:layout_width="match_parent" android:layout_height="0dp">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button
                    android:id="@+id/pause_button"
                    android:background="@drawable/pause"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    />

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/time_bar"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    app:rcBackgroundColor="#FFFFFF"
                    app:rcBackgroundPadding="4dp"
                    app:rcMax="100"
                    app:rcProgress="0"
                    app:rcProgressColor="#999999"
                    app:rcRadius="20dp" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_width="match_parent" android:layout_height="4dp"/>
    <FrameLayout
            android:id="@+id/button_layout"
            android:layout_weight="2"
            android:layout_width="match_parent" android:layout_height="0dp">
        <!--<fragment-->
                <!--android:id="@+id/four_button_fragment"-->
                <!--android:name="com.example.SaveChameleon.fragment.FourButtonFragment"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" tools:layout="@layout/four_button"/>-->
    </FrameLayout>
</LinearLayout>

